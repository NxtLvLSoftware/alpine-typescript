{
  "name": "@nxtlvlsoftware/alpine-typescript",
  "description": "Typescript definitions for Alpine.js.",
  "version": "0.0.3",
  "author": "Jack Noordhuis <me@jacknoordhuis.net>",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "files": [
    "README.md",
    "LICENSE",
    "src/**/*.d.ts",
    "src/**/*.js",
    "index.d.ts",
    "index.js"
  ],
  "keywords": [
    "alpine",
    "alpine.js",
    "typescript",
    "components"
  ],
  "scripts": {
    "build": "tsc --inlineSourceMap --removeComments -p ./",
    "build-ci": "tsc --pretty false --inlineSourceMap --removeComments --listEmittedFiles -p ./",
    "dev": "tsc --watch -p ./",
    "docs": "npx typedoc --plugin typedoc-plugin-extras --out docs-build --cacheBust index.ts",
    "docs-ci": "npx typedoc --plugin typedoc-plugin-extras --gitRemote dist --out docs-build --cacheBust index.ts"
  },
  "dependencies": {
    "@types/alpinejs": "^3.7.2"
  },
  "devDependencies": {
    "typedoc": "^0.25.1",
    "typedoc-plugin-extras": "^3.0.0",
    "typescript": "^5.1.6"
  }
}
